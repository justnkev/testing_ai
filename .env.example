# Flask configuration
FLASK_ENV=development
FLASK_SECRET_KEY=change-me
SESSION_LIFETIME_DAYS=14
SESSION_COOKIE_NAME=fitvision_session
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_SAMESITE=Lax
# Use 1/true to force secure cookies locally when testing over HTTPS.
SESSION_COOKIE_SECURE=0

# Storage toggles
# Set to 1 in production (e.g., Vercel) to disable any filesystem writes.
DISABLE_FILESYSTEM_STORAGE=0
STORAGE_DATA_DIR=./instance/data
# Optional local override for SQLAlchemy when Supabase is unavailable.
LOCAL_DATABASE_URI=sqlite:///instance/dev.db

# Gemini / Google Generative AI
GEMINI_API_KEY=your-gemini-api-key

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
# Connection string for Supabase pooled Postgres (include sslmode=require).
SUPABASE_DB_POOL_URL=postgresql://user:password@db.supabase.co:5432/postgres?sslmode=require
# Optional override to append sslmode when not embedded in the URL above.
DATABASE_SSLMODE=require
